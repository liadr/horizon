<div class="page-header">
  <h3>Reply #<%= @reply.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Body</dt>
      <dd><%= @reply.body %></dd>

      <dt>User</dt>
      <dd>
        <% if @reply.user.present? %>
          <a href="/users/<%= @reply.user_id %>">
            <%= @reply.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Review</dt>
      <dd>
        <% if @reply.review.present? %>
          <a href="/reviews/<%= @reply.review_id %>">
            <%= @reply.review.user_id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/replies" class="btn btn-primary">
        Back
      </a>
      <a href="/replies/<%= @reply.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_reply/<%= @reply.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
