<div class="page-header">
  <h1>
    Warehouses
    <a href="/warehouses/new" class="btn btn-lg btn-success">New Warehouse</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "warehouses_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :num_reviews, "Num reviews" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :num_reviews_gteq, :class => "form-control", :placeholder => "Num reviews greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :num_reviews_lteq, :class => "form-control", :placeholder => "Num reviews less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :total_stars, "Total stars" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :total_stars_gteq, :class => "form-control", :placeholder => "Total stars greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :total_stars_lteq, :class => "form-control", :placeholder => "Total stars less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :storage_methods_cont, "Storage methods contains" %>
    <%= f.text_field :storage_methods_cont, :class => "form-control", :placeholder => "Storage methods contains" %>
  </div>

<div class="form-group">
    <%= f.label :staffed_cont, "Staffed contains" %>
    <%= f.text_field :staffed_cont, :class => "form-control", :placeholder => "Staffed contains" %>
  </div>

<div class="form-group">
    <%= f.label :sqft_cont, "Sqft contains" %>
    <%= f.text_field :sqft_cont, :class => "form-control", :placeholder => "Sqft contains" %>
  </div>

<div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :state_name_cont, "State name contains" %>
      <%= f.text_field :state_name_cont, :class => "form-control", :placeholder => "State name contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "Listing Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='listingsgteqcreated_atPicker'>
                  <%= f.text_field :listings_created_at_gteq, :class => "form-control", :placeholder => "Listing Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='listingslteqcreated_atPicker'>
                  <%= f.text_field :listings_created_at_lteq, :class => "form-control", :placeholder => "Listing Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#listingsgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#listingslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#listingsgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#listingslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#listingslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#listingsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/warehouses" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#warehouses_filters">
      Show Filters
    </a>
  </div>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>State</th>
        <th>Name</th>
        <th>Sqft</th>
        <th>Address</th>
        <th>Staffed</th>
        <th>Storage methods</th>
        <th>Total stars</th>
        <th>Num reviews</th>
        <th>Actions</th>
      </tr>

      <% @warehouses.each do |warehouse| %>
      <tr>
        <td>
          <% if warehouse.user.present? %>
            <a href="/users/<%= warehouse.user.id %>">
              <%= warehouse.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if warehouse.state.present? %>
            <a href="/states/<%= warehouse.state.id %>">
              <%= warehouse.state.name %>
            </a>
          <% end %>
        </td>
        <td><%= warehouse.name %></td>
        <td><%= warehouse.sqft %></td>
        <td><%= warehouse.address %></td>
        <td><%= warehouse.staffed %></td>
        <td><%= warehouse.storage_methods %></td>
        <td><%= warehouse.total_stars %></td>
        <td><%= warehouse.num_reviews %></td>
        <td>
          <a href="/warehouses/<%= warehouse.id %>" class="btn btn-primary">Show</a>
          <a href="/warehouses/<%= warehouse.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_warehouse/<%= warehouse.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @warehouses, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>